{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",

    "required": ["title", "recordings"],

    "properties": {
        "title": {
            "type": "string"
        },
        "recordings": {
            "type": "array",
            "items": {
                "type": "string",
                "description": "Name of a JSON file in the `data` directory thas has information about a recording",
                "minLength": 1
            }
        }
    }

    

}